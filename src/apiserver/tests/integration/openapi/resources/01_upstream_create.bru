meta {
  name: create_upstream
  type: http
  seq: 8
}

post {
  url: {{scheme}}://{{host}}/api/v1/open/gateways/{{gateway_name}}/resources/upstreams/
}

headers {
  Content-Type: application/json
  X-BK-API-TOKEN: {{x_bk_api_token}}
}

body {
    [
        {
          "name": "test_upstream",
          "config": {
            "type": "roundrobin",
            "nodes": {
              "127.0.0.1:1980": 1
            },
            "timeout": {
              "connect": 1000,
              "send": 1000,
              "read": 1000
            }
          }
        }
    ]
}

script:post-response {
    bru.setVar("upstream_id", res.body.data[0].id);
}

assert {
  res.status: eq 200
  res.body.data[0].name: eq "test_upstream"
  res.body.data[0].id: matches /^bk.*/
}