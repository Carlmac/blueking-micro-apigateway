meta {
  name: create_service
  type: http
  seq: 7
}

post {
  url: {{scheme}}://{{host}}/api/v1/open/gateways/{{gateway_name}}/resources/services/
}

headers {
  Content-Type: application/json
  X-BK-API-TOKEN: {{x_bk_api_token}}
}

body {
    [
        {
          "name": "test_service",
          "config": {
            "upstream": {
              "type": "roundrobin",
              "nodes": [
                {
                  "host": "httpbin.org",
                  "port": 443,
                  "weight": 1
                }
              ]
            }
          }
        }
    ]
}

script:post-response {
    bru.setVar("service_id", res.body.data[0].id);
}

assert {
  res.status: eq 200
  res.body.data[0].name: eq "test_service"
  res.body.data[0].id: matches /^bk.*/
}
